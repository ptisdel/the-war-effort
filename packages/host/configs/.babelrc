{
  "env": {
    "development": {
      "presets": [
        "@babel/preset-env", 
        "@babel/preset-react"
      ],
      "plugins": [
        ["module-resolver", {
          "alias": {
            "@": "./src"
          }
        }],
        "@babel/plugin-proposal-object-rest-spread",
        "@babel/plugin-proposal-optional-chaining",
        [
          "@babel/plugin-transform-runtime",
          {
            "regenerator": true
          }
        ],
        [
          "babel-plugin-styled-components",
          {
            "fileName": true
          }
        ]
      ]
    },
    "test": {
      "presets": [
        [
          "@babel/preset-env", 
          {
            "modules": "auto",
            "targets": {
              "node": "current"
            }
          }
        ],
        "@babel/preset-react"
      ],
      "plugins": [
        "@babel/plugin-proposal-object-rest-spread"
      ]
    }
  }
}